<core:FragmentDefinition id="Clubes"
	xmlns="sap.m"
	xmlns:l="sap.ui.layout"
	xmlns:core="sap.ui.core"
	xmlns:mvc="sap.ui.core.mvc"
	xmlns:custom="http://schemas.sap.com/sapui5/extension/sap.ui.core.CustomData/1"
    controllerName="com.sofftek.aca20241q.controller.Main"
	xmlns:f="sap.f"
	height="100%"
	xmlns:fb="sap.ui.comp.filterbar"
	xmlns:svm="sap.ui.comp.smartvariants"
	xmlns:smartFilterBar="sap.ui.comp.smartfilterbar"
	xmlns:smartTable="sap.ui.comp.smarttable"
	xmlns:html="http://www.w3.org/1999/xhtml"
	xmlns:app="http://schemas.sap.com/sapui5/extension/sap.ui.core.CustomData/1"
>


	<Page id="_IDHeadderCONBORDE" showHeader="false" class="header" >
        <FlexBox id="_IDGenFlsdsexBox1" justifyContent="Center" width="100%" class="search" >
            <items>
                <SearchField id="__xsf" class="searchInput" placeholder="Escribe aquí para buscar..." liveChange="onSearchChangeFilter"/>
            </items>
        </FlexBox>
	    <f:DynamicPage id="_IDGenDynamicPage1" headerExpanded="true">     
        <f:content>
            <Table id="tableClube" 
                inset="false"
                mode="None"
                items="{
                    path: '/ClubSet'
                }"
            >
            <columns>
                <Column id="_IDGenColumn1"  demandPopin="true">
                    <Text id="_IDGenText1" text="Nombre"/>
                </Column>
                <Column id="_IDGenColumn2"  demandPopin="true">
                    <Text id="_IDGenText2" text="Ciudad"/>
                </Column>
                <Column id="_IDGenColumn3"  demandPopin="true">
                    <Text id="_IDGenText3" text="País"/>
                </Column>
                <Column id="_IDGenColumn4"  demandPopin="true">
                    <Text id="_IDLeague" text="Liga"/>
                </Column>
                <Column id="_IDGenColumn5"  demandPopin="true" class="foundationDate">
                    <Text id="_IDFoundationDate" text="Fundación"/>
                </Column>
                <Column id="_IDGenColumn6"  demandPopin="true">
                    <Text id="_IDActions"  text="Acciones"/>
                </Column>
            </columns>
            <items>
                <ColumnListItem id="_IDGenColumnListItem1" vAlign="Middle">
                    <cells>
                        <Text  id="textName" text="{Name}"  />
                        <Text  id="textCountry" text="{Country}"/>
                        <Text  id="textCity" text="{City}"/>
                        <Text  id="textLeague" text="{League}"/>
                        <Text id="textFoundationDate" text="{
                            path: 'FoundationDate',
                            formatter: '.getFoundationDate'
                        }"/>
                        <HBox id="_IDGenHBox1">
                            <core:Icon
                                id="_IDGenIconEdit"
                                src="sap-icon://edit"
                                class="size5"
                                color="#007bff"
                                press="editClub"
                                >
                                <core:layoutData>
                                    <FlexItemData id="_IDGenFlexItemData1" growFactor="1" />
                                </core:layoutData>
                            </core:Icon>
                            <core:Icon
                                id="_IDGenIconDelete"
                                src="sap-icon://delete"
                                class="size5"
                                color="#dc3545"
                                press="deleteClub" 
                                >
                                <core:layoutData>
                                    <FlexItemData id="_IDGenFlexItemData2" growFactor="1" />
                                </core:layoutData>
                            </core:Icon>
                        </HBox>
                        </cells>
                    </ColumnListItem>
                </items>
            </Table>
        </f:content>
        </f:DynamicPage>
    </Page>
</core:FragmentDefinition>
