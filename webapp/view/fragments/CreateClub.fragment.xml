<core:FragmentDefinition id="CreateClub"
	
	xmlns="sap.m"
	xmlns:l="sap.ui.layout"
	xmlns:core="sap.ui.core"
	xmlns:mvc="sap.ui.core.mvc"
	xmlns:custom="http://schemas.sap.com/sapui5/extension/sap.ui.core.CustomData/1"
    controllerName="com.sofftek.aca20241q.controller.Main"
    xmlns:f="sap.ui.layout.form" 
>

	<f:SimpleForm id="SimpleFormDisplay480" editable="false" layout="ResponsiveGridLayout" title="" labelSpanL="3" labelSpanM="3" emptySpanL="2" emptySpanM="2" columnsL="2" columnsM="2" class="create">
		<Label id="labelName" text="Nombre"  required="true"/>
		<Input id="Namfe" placeholder="Ingrese el nombre" value="{FormDataClub>/Name}" />

		<Label id="labelCity" text="Ciudad" required="true"/>
		<Input id="city" placeholder="Ingrese la ciudad"  value="{FormDataClub>/City}"/>

		<Label id="labelCountry" text="País"  required="true"/>
		<Input id="country"  placeholder="Ingrese el país" value="{FormDataClub>/Country}" />

		<Label id="labelLeague" text="Liga"  required="true"/>
		<Input id="league" placeholder="Ingrese la liga"  value="{FormDataClub>/League}"/>

		<Label id="labelDate" text="Fecha de Fundación" required="true"/>
		<DatePicker id="foundationDate"  value="{FormDataClub>/FoundationDate}"/>
	</f:SimpleForm>	


</core:FragmentDefinition>