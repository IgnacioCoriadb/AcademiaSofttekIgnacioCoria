<core:FragmentDefinition id="CreateClub"
	
	xmlns="sap.m"
	xmlns:l="sap.ui.layout"
	xmlns:core="sap.ui.core"
	xmlns:mvc="sap.ui.core.mvc"
	xmlns:custom="http://schemas.sap.com/sapui5/extension/sap.ui.core.CustomData/1"
    controllerName="com.sofftek.aca20241q.controller.Main"
    xmlns:f="sap.ui.layout.form" 
    >

	<Page class="page" id="pageForm">
		<f:SimpleForm id="_IDGenSimpleForm1" layout="ResponsiveGridLayout" 
			columnsL="2"
			columnsM="1"
			labelSpanXL= "1"
			labelSpanL= "4" 
			labelSpanM= "2" 
			labelSpanS= "2"  
		>
			<Label id="_IDGenLabel1" text="Nombre" />
			<Input id="_IDGenInput1" placeholder="Ingrese el nombre" class="formInputs" width="80%"/>

			<Label id="_IDGenLabel2" text="Ciudad"/>
			<Input id="_IDGenInput2" placeholder="Ingrese la ciudad" class="formInputs" width="80%"/>

			<Label id="_IDGenLabel3" text="País" />
			<Input id="_IDGenInput3" type="Number" placeholder="Ingrese el país" class="formInputs" width="80%"/>

			<Label id="_IDGenLabel4" text="Liga" />
			<Input id="_IDGenInput4" placeholder="Ingrese la liga" class="formInputs" width="80%"/>

			<Label id="_IDGenLabel5" text="Fecha de Fundación" />
			<DatePicker id="_IDGenDatePicker1" class="formInputs" width="100%"/>
       
			<Button id="_IDGenButton1" text="Guardar" press="saveClub" width="100%" class="formInputs submit">
    <layoutData>
        <l:GridData id="_IDGenGridData1" span="L2 M2" />
    </layoutData>
</Button>

		</f:SimpleForm>
    </Page>
</core:FragmentDefinition>
