<core:FragmentDefinition id="CreatePlayer"
	xmlns="sap.m"
	xmlns:l="sap.ui.layout"
	xmlns:core="sap.ui.core"
	xmlns:mvc="sap.ui.core.mvc"
	xmlns:custom="http://schemas.sap.com/sapui5/extension/sap.ui.core.CustomData/1"
    controllerName="com.sofftek.aca20241q.controller.Main"
    xmlns:f="sap.ui.layout.form" 
>

	<f:SimpleForm id="FormPlayerId" editable="false" layout="ResponsiveGridLayout" title="" labelSpanL="3" labelSpanM="3" emptySpanL="2" emptySpanM="2" columnsL="2" columnsM="2" class="create">
		<Label id="labelNamePlayers" text="Nombre"  required="true"/>
		<Input id="namePlayers" placeholder="Ingrese el nombre" liveChange="validateInputCreateClub"/>

		<Label id="labelLastName" text="Apellido" required="true"/>
		<Input id="lastName" placeholder="Ingrese el apellido" liveChange="validateInputCreateClub"/>

        <Label id="labelBirthDate" text="Fecha de Nacimiento" required="true"/>
		<DatePicker id="birthDate" change="validateInputCreateClub"/>

        <Label id="labelNationality" text="Nacionalidad" required="true"/>
		<Input id="nationality" placeholder="Ingrese su nacionalidad" liveChange="validateInputCreateClub"/>
	</f:SimpleForm>	


</core:FragmentDefinition>