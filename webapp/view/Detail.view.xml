<mvc:View controllerName="com.sofftek.aca20241q.controller.Detail"
    xmlns:mvc="sap.ui.core.mvc" displayBlock="true"
    xmlns="sap.m"
    xmlns:f="sap.f"
    xmlns:form="sap.ui.layout.form"
    xmlns:c="sap.ui.core"
    >
    <Page id="DetailPage" title="Jugadores del Club" showNavButton="true" navButtonPress="onBack">
    <content>
         <Table id="table" mode="SingleSelectMaster" items="{ToPlayerSet}" selectionChange="onSelectionItem">
         
                <columns>
                    <Column id="columnIdClub">
                            <Text  id="textIdName" text="Nombre"></Text>
                    </Column>
                    <Column id="ColumnLastName">
                        <Text  id="textIdLastName" text="Apellido"></Text>
                    </Column>
                    <Column id="ColumnBirthDate">
                    <Text  id="textIdBirthDate" text="Fecha de Nacimiento"></Text>
                    </Column>
                    <Column id="ColumnNationality">
                    <Text  id="textNationality" text="Nacionalidad"></Text> 
                    </Column>
                </columns>
                <ColumnListItem id="columnListClub" >
                    <cells>
                        <Text  id="textIdNameCell" text="{Name}"/>
                        <Text  id="textIdLastNameCell" text="{LastName}"/>
                        <Text  id="textIdBirthDateCell" text="{BirthDate}"/>
                        <Text  id="textIdNacionalidadCell" text="{Nationality}"/>
                    </cells>
                </ColumnListItem>
            </Table>


    </content>
    </Page>
</mvc:View>
