<mvc:View controllerName="com.sofftek.aca20241q.controller.Main"
    xmlns:mvc="sap.ui.core.mvc" displayBlock="true"
    xmlns="sap.m"
    xmlns:f="sap.f"
    xmlns:form="sap.ui.layout.form"
    xmlns:c="sap.ui.core"
    >

    <Page id="page" showFooter="true" floatingFooter="true" title="Todos los clubes">
        <headerContent>
            <Button text="Crear Club" id="ButtonIdClub" press="onOpenDialog"></Button>
            <!-- <Button text="Crear Jugador" id="ButtonIdPlayer" press="onOpenDialog"></Button> -->

        </headerContent>


    <content>
    <!--Una tabla que te permite hacer click en cada elemento de la tabla gracias al mode="SingleSelectMaster"-->
             <Table id="tableClube" mode="SingleSelectMaster" items="{/ClubSet}" selectionChange="onSelectionItem">
        
                <columns>
                 <!-- <Column id="columnIdClub">
                        <Text  id="textIdClub" text="IdClub"></Text>
                    </Column> -->
                    <Column id="columnName4">
                        <Text  id="textNameColumn" text="Nombre"></Text>
                    </Column>
                     <Column id="columnCountry">
                        <Text  id="textCountryColumn" text="País"></Text>
                    </Column>
                    <Column id="columnCity">
                        <Text  id="textCityColumn" text="Ciudad"></Text>
                    </Column>
                    <Column id="columnFoundationDate">
                        <Text  id="textFoundationDateColumn" text="Fecha de Funcación"></Text>
                    </Column>
                    <Column id="columnLeague">
                        <Text  id="textLeagueColumn" text="Liga"></Text>
                    </Column>
                </columns>
                <ColumnListItem id="columnListClub" >
                    <cells>
                        <!-- <Text  id="textIdClub2" text="{IdClub}"/> -->
                        <Text  id="textIdClub3" text="{Name}"/>
                        <Text  id="textName" text="{Name}"/>
                        <Text  id="textCountry" text="{Country}"/>
                        <Text  id="textCity" text="{City}"/>
                        <Text  id="textFoundationDate" text="{FoundationDate}"/>
                        <Text  id="textLeague" text="{League}"/>
                    </cells>
                </ColumnListItem>
            </Table>
    </content>

        

    </Page>

</mvc:View>
